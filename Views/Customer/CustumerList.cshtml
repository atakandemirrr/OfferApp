@model List<OfferApp.Models.Customer>
@{
    ViewData["Title"] = "Müşteriler";

}

<div class="container-fluid list-products">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h5>Müşteriler</h5>
                </div>
                <div class="card-header pb-0 text-right">
                    <a class="btn btn-primary" asp-controller="Users" asp-action="CreateUser"><span>Müşteriler Oluştur</span></a> </div>
                    <br />
                <button class="btn btn-primary" type="button" data-bs-toggle="modal" data-bs-target=".bd-example-modal-lg">Large modal</button>
                <br />
                <a id="btnOpenModal" data-url="Customer/CreateCustomer" action="1" class="btn btn-primary" href="#"> aaaaa</a>
                <div class="card-body">
                    <div class="table-responsive product-table">
                        <table class="display" id="basic-1">
                            <thead>
                                <tr>
                                    <th>Kodu</th>
                                    <th>Unvanı</th>
                                    <th>VkNo</th>
                                    <th>Email</th>
                                    <th>Ükle</th>
                                    <th>Adresi</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Custumer in Model)
                                {
                                    <tr>

                                        <td>@Custumer.Code</td>
                                        <td>@Custumer.Name</td>
                                        <td class="font-success">@Custumer.VkNo</td>
                                        <td>@Custumer.Email</td>
                                        <td>@Custumer.Country</td>
                                        <td>@Custumer.Address</td>
                                        <td>
                                            <a href="/Users/UpdateUser/@Custumer.UserTableId"><li data-feather="edit"></li></a>
                                        <td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="ModalNew" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
</div>

