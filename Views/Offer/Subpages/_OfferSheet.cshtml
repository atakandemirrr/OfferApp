@Model OfferApp.ViewModels.VMOffer

@section Scripts {
    <script src="/AppJs/offer.js"></script>

}



<div class="modal-dialog modal-lg" id="Modal">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" id="myLargeModalLabel">Teklif Önizleme</h4>
            <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" id="modal-body-content">
            <div class="row invo-header">
                <div class="col-sm-6">
                    <div class="media">
                        <div class="media-left"><a href="index.html"><img class="media-object img-60" src="~/images/logo/logo-1.png" alt=""></a></div>
                        <div class="media-body m-l-20">
                            <h4 class="media-heading f-w-600">Sipariş Formu</h4>
                            <p>Firmamız Bilgileri Gelicek<br><span class="digits">289-335-6503</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="text-md-end text-xs-center">
                        <h3>@Model._Offer.OfferSeri - @Model._Offer.OfferSira<span class="digits counter"></span></h3>
                        <p>Sipariş Tarihi: @Model._Offer.OfferDate<span class="digits"></span><br>                                                            Teslim Tarihi: @Model._Offer.DeliveryDate<span class="digits"></span></p>
                    </div>
                    <!-- End Title-->
                </div>
            </div>

            <div class="row invo-profile">
                <div class="col-xl-4">
                    <div class="media">
                        <div class="media-left"><img class="media-object rounded-circle img-60" src="~/images/user/7.jpg" alt=""></div>
                        <div class="media-body m-l-20">
                            <h4 class="media-heading f-w-600">@Model._Offer.Customer.Name</h4>
                            <p>email bilgisi<br><span class="digits">tel no</span></p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8">
                    <div class="text-xl-end" id="project">
                        <h6>Sipariş Açıklaması</h6>
                        <p>açıklama Açıklama.....</p>
                    </div>
                </div>
            </div>

            <div class="table-responsive invoice-table" id="table">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td class="item">
                                <h6 class="p-2 mb-0">Ürün</h6>
                            </td>
                            <td class="Hours">
                                <h6 class="p-2 mb-0">Adet</h6>
                            </td>
                            <td class="Rate">
                                <h6 class="p-2 mb-0">Fiyat</h6>
                            </td>
                            <td class="subtotal">
                                <h6 class="p-2 mb-0">Tutar</h6>
                            </td>
                        </tr>
                        @foreach (var P in Model.Offers)
                        {
                            <tr>
                                <td>@P.Product.Name</td>
                                <td>@P.Piece</td>
                                <td>@P.Price</td>
                                <td>@P.Total</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="row mt-3">
                <div class="col-md-8">
                    <div>
                        <p class="legal"><strong>Teşekkürler!</strong></p>
                    </div>
                </div>
                <div class="col-md-4">
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <div class="col-sm-12 text-center mt-3">
                <button type="button" class="btn btn-primary me-2" onclick="printModalBody()">Yazdır</button>
                <button class="btn btn btn-primary me-2" type="button" onclick="generatePDF()" readonly>İndir</button>
            </div>
        </div>

    </div>
</div>

