@model OfferApp.ViewModels.VMOffer




@section Scripts {
    <script src="/AppJs/offer.js"></script>

}



<div class="card">
    <div class="card-header pb-0">
        @Html.HiddenFor(model => model.Offers.First().CreateDate, new { @id = "CreateDate" })
        @Html.HiddenFor(model => model.Offers.First().OfferSeri, new { @id = "OfferSeri" })
        @Html.HiddenFor(model => model.Offers.First().OfferSira, new { @id = "OfferSira" })
        <input id="BtnSecim" type="hidden" value="0">
        @Html.HiddenFor(model => model.Offers.First().CreateUser, new { @id = "CreateUser", value = User.Identity.Name })

        <div class="row">
            <div class="col-md-4">
                <h5 id="serisira"></h5>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4 d-flex justify-content-end">
            </div>
        </div>
    </div>
    <div class="card-header pb-0 text-right">
        <div class="mb-2">
            <div class="row">
                <div class="col-md-12">

                    @if (@Model.Offers.First().CustomerCode == null)
                    {
                        <label class="col-form-label">Müşteri</label>
                        <select id="customerSelect" class="js-example-placeholder-multiple col-sm-12">
                            <option value="">Seçiniz..</option>
                        </select>

                    }
                    else
                    {
                        <div class="row">
                            <label>Müşteri</label>
                        </div>                     
                        <input class="col-md-12" id="customer" type="text" disabled="disabled" value="@Model.Offers.First().CustomerCode">
                    }
                </div>
            </div>
        </div>
        <div class="mb-2">
            <div class="row">
                <div class="col-md-3">
                    <label class="col-form-label text-end pt-0">Teklif Tarihi</label>
                    <div class="form-row">
                        <div class="col-md-12 mb-2">
                            @Html.TextBoxFor(model => model.Offers.First().OfferDate, new { @id = "OfferDate", @class = "datepicker-here form-control digits", @type = "datetime", @data_language = "tr" })
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <label class="col-form-label text-end pt-0">Teslim Tarihi</label>
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Offers.First().DeliveryDate, new { @id = "DeliveryDate", @class = "datepicker-here form-control digits", @type = "datetime", @data_language = "tr" })
                    </div>
                </div>
                <div id="customerInformation" class="col-md-6">
                </div>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-6">
                <div class="mb-4 ui-draggable-handle" style="position: static;">
                    <label for="formcontrol-select1">Ürün Seç</label>
                    <select id="productSelect" @* class="js-example-placeholder-multiple col-sm-12" *@ class="form-control btn-square">
                        <option value="">Seçiniz..</option>
                    </select>
                </div>
            </div>
            <div class="col-md-2">
                <label>Birim Fiyat</label>
                <input id="stockPrice" readonly class="form-control digits" disabled="disabled" type="number">
            </div>
            <div class="col-md-2">
                <label>Adet</label>
                <input id="quantity" class="form-control digits" type="number">
            </div>
            <div class="col-md-2">
                <label>Tutar</label>
                <input id="total" class="form-control digits" disabled="disabled" type="number">
            </div>
        </div>
        <div class="row">
            <div class="col-md-10"></div>
            <div class="col-md-2" id="btnArea">
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ürün Kodu</th>
                        <th>Ürün Adı</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="OfferRowTable">
                </tbody>
            </table>
        </div>
    </div>
</div>
